{
  "name": "finance-calculator-extension",
  "version": "1.0.0",
  "description": "Chrome extention to calculate expected stock prices on Japanese finance services.",
  "main": "index.js",
  "repository": "https://github.com/blue-jam/finance-calculator-extension",
  "author": "blue-jam",
  "license": "Apache-2.0",
  "scripts": {
    "copy-asset": "cp manifest.json build && cp -r html/* build && cp -r images build",
    "prepare-build": "rm -rf build && mkdir build && npm run copy-asset",
    "build": "yarn prepare-build && webpack",
    "start": "yarn prepare-build && webpack --watch",
    "staticAnalysis": "yarn checkformat && yarn lint",
    "checkformat": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "validate": "yarn staticAnalysis && yarn test"
  },
  "dependencies": {
    "@types/chrome": "0.0.126",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "css-loader": "^5.0.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-react": "^7.21.5",
    "jest": "^26.6.3",
    "prettier": "^2.2.0",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0"
  }
}
